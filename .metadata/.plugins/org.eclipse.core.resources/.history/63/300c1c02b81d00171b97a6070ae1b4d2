package textExcel;

public class FormulaCell extends RealCell {

	private String formula;
	
	public String abbreviatedCellText() {
		String abbreviated = getDoubleValue() + "";
		String spaces = "";
		if (abbreviated.length() <= 10){
			for (int i = 10; i > abbreviated.length(); i--){
				spaces += " ";
			}
			return abbreviated + spaces;
		}
		else {
			return abbreviated.substring(0, 10);
		}
	}
	
	public getDoubleValue() {
		formula = formula.split(" ");
		
	}
	
	public String fullCellText() {
		return super.fullCellText();
	}
	
	public FormulaCell(String val) {
		super(val);
		formula = fullCellText().substring(2, fullCellText().length() - 2);
	}

}
